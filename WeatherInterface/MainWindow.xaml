<Window x:Class="WeatherInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="weatherButton" Content="Get the Weather!" Margin="151,41,151,0" VerticalAlignment="Top" Click="click"/>
        <Label  Content="Enter City:" HorizontalAlignment="Left" Margin="151,10,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox x:Name="cityInput" HorizontalAlignment="Left" Height="23" Margin="224,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Temp:" HorizontalAlignment="Left" Margin="151,71,0,0" VerticalAlignment="Top"/>
        <Label Content="Condition:" HorizontalAlignment="Left" Margin="151,102,0,0" VerticalAlignment="Top"/>
        <Label x:Name="tempTV" Content="" Margin="192,71,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="condTV" Content="" Margin="214,102,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="214,133,0,0" VerticalAlignment="Top" Width="100" OpacityMask="Black"/>

    </Grid>
</Window>
